{
  "name": "app_app",
  "version": "0.0.1",
  "description": "A basic template for node apps",
  "repository": "none",
  "scripts": {
    "watchSass": "sass --watch assets/scss/app.scss:public/css/app.css",
    "watchJs": "watchify -t reactify -t envify client/app.js -o public/js/bundle.js",
    "watch": "npm run watchSass & npm run watchJs",
    "buildJs": "source ~/.zshrc && browserify -t reactify -t envify client/app.js -o public/js/bundle.js",
    "buildSass": "sass assets/scss/app.scss:public/css/app.css",
    "build": "npm run buildJs && npm run buildSass",
    "start": "gulp start"
  },
  "dependencies": {
    "async": "^0.9.0",
    "baobab": "^1.1.0",
    "baobab-react": "^0.1.1",
    "body-parser": "^1.12.4",
    "co-body": "^2.0.0",
    "co-monk": "^1.0.0",
    "envify": "^3.4.0",
    "express": "^4.12.0",
    "jquery": "^2.1.4",
    "koa": "^0.21.0",
    "koa-compose": "^2.3.0",
    "koa-mount": "^1.3.0",
    "koa-router": "^5.0.1",
    "koa-static": "^1.4.9",
    "koa-views": "^3.0.0",
    "lodash": "^3.2.0",
    "monk": "^1.0.1",
    "react": "^0.13.3",
    "react-router": "^0.13.3",
    "react-spinner": "^0.2.1",
    "socket.io": "^1.3.5",
    "socket.io-client": "^1.3.5",
    "superagent": "^1.2.0",
    "swig": "^1.4.2"
  },
  "devDependencies": {
    "browserify": "^8.1.3",
    "chalk": "^1.0.0",
    "gulp": "^3.8.11",
    "gulp-jshint": "^1.10.0",
    "gulp-nodemon": "^2.0.3",
    "jshint-stylish": "^1.0.2",
    "node-jsx": "^0.13.3",
    "reactify": "^1.0.0",
    "watchify": "^2.3.0"
  }
}
